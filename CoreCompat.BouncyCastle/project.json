{
  "version": "1.8.1-*",

  "authors": [ "Oren Novotny" ],
  "title": "Bouncy Castle PCL",
  "description": "Support for .NET 4.5, and .NET Core.",

  "packOptions": {
    "licenseUrl": "https://github.com/corecompat/BouncyCastle-PCL/blob/pcl/License.html",
    "owners": [ "quamotion" ],
    "repository": {
      "type": "git",
      "url": "https://github.com/corecompat/BouncyCastle-PCL/"
    },
  },

  "dependencies": {
  },

  "buildOptions": {
    "keyFile": "../BouncyCastle.snk",
    "strongName": true,

    "compile": {
      "include": [
        "../crypto/**/src/**/*.cs"
      ],
      "exclude": [
        "../crypto/**/test"
      ]
    }
  },


  "frameworks": {
    "netstandard1.5": {
      "imports": "dnxcore50",
      "buildOptions": {
	 "define": [ "PORTABLE", "NEW_REFLECTION", "NO_THREADS" ]
      },
      "dependencies": {
        "NETStandard.Library": "1.5.0-rc2-24027",
	"System.Collections.NonGeneric": "4.0.1-rc2-24027",
	"System.Security.Cryptography.Algorithms": "4.1.0-rc2-24027",
	"System.Security.Cryptography.X509Certificates": "4.1.0-rc2-24027"
      }
    },

    "net45": {
      "frameworkAssemblies": {
      }
    }
  },

  "runtimes": {
    "win7-x64": { }
  }
}